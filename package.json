{
  "name": "asep-coursework",
  "version": "1.0.0",
  "repository": "https://stgit.dcs.gla.ac.uk/2504266b/asep-coursework-2021",
  "author": "Inesh Bose <2504266b@student.gla.ac.uk>",
  "private": true,
  "dependencies": {
    "es6-template-string": "^1.2.0",
    "json-md": "^1.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "4.3.8",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "remark-cli": "^10.0.1",
    "remark-lint-emphasis-marker": "^3.1.1",
    "remark-lint-list-item-indent": "^3.1.1",
    "remark-lint-strong-marker": "^3.1.1",
    "remark-lint-table-pipe-alignment": "^3.1.1",
    "remark-lint-table-pipes": "^4.1.1",
    "remark-preset-lint-consistent": "^5.1.1",
    "remark-preset-lint-recommended": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "md-data/**/*.json": [
      "npx ts-node scripts/generate.ts md-data/diaries weekly_diary.t.md",
      "npx ts-node scripts/generate.ts md-data/assessments FormativeAssessment.t.md"
    ],
    "**/*.md": [
      "npx remark . --output"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-consistent",
      "remark-preset-lint-recommended",
      [
        "remark-lint-list-item-indent",
        "space"
      ],
      "remark-lint-table-cell-padding",
      "remark-lint-table-pipe-alignment",
      "remark-lint-table-pipes"
    ]
  }
}
